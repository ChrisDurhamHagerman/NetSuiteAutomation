@page
@model NetSuiteAutomation.Pages.CreditSafeImportModel
@{
    ViewData["Title"] = "CreditSafe Import";
}

<h2>CreditSafe Import</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="fileUpload" class="form-label">Upload Excel File</label>
        <input type="file" id="fileUpload" name="fileUpload" class="form-control" accept=".xlsx,.xls" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

@if (Model.Message != null)
{
    <div class="alert alert-info mt-3">@Model.Message</div>
}
